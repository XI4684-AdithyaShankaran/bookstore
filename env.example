# =============================================================================
# BOOKSTORE MICROSERVICES ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bookstore_user:bookstore_pass@localhost:5432/bookstore_db
POSTGRES_DB=bookstore_db
POSTGRES_USER=bookstore_user
POSTGRES_PASSWORD=bookstore_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# WEAVIATE VECTOR DATABASE
# =============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=Book

# =============================================================================
# AI/ML SERVICES
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# KAGGLE API CONFIGURATION
# =============================================================================
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key
KAGGLE_DATASET_ID=saurabhbagchi/books-dataset
KAGGLE_DATASET_VERSION=1

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=your_very_long_random_secret_key_here_minimum_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_chars

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
LOG_LEVEL=INFO
ANALYTICS_ENABLED=true
METRICS_COLLECTION=true
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
ENVIRONMENT=development
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=500
CACHE_TTL=3600
REDIS_CACHE_TTL=1800
MEMORY_CACHE_SIZE=1000

# =============================================================================
# DATABASE CONNECTION POOL
# =============================================================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=20
DB_POOL_RECYCLE=900

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=uploads
CDN_URL=
CDN_ENABLED=false

# =============================================================================
# SEARCH & INDEXING
# =============================================================================
SEARCH_INDEX_NAME=books
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# PAYMENT PROCESSING (Optional)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKER_PROCESSES=2
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=2

# =============================================================================
# HEALTH MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# API DOCUMENTATION
# =============================================================================
SWAGGER_UI_ENABLED=true
REDOC_ENABLED=true
API_DOCS_PATH=/docs

# =============================================================================
# TESTING ENVIRONMENT
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_bookstore
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_BUILD_CONTEXT=.

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
K8S_NAMESPACE=bookstore
K8S_REPLICAS=3
K8S_RESOURCE_LIMITS_CPU=500m
K8S_RESOURCE_LIMITS_MEMORY=512Mi

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
GITHUB_TOKEN=your_github_token
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password 