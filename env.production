# =============================================================================
# BOOKSTORE PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Production environment - prod branch
# Used for live production deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bookstore_prod_user:bookstore_prod_pass@prod-db.bookstore.com:5432/bookstore_prod
POSTGRES_DB=bookstore_prod
POSTGRES_USER=bookstore_prod_user
POSTGRES_PASSWORD=bookstore_prod_pass
POSTGRES_HOST=prod-db.bookstore.com
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION - INDUSTRIAL STANDARD
# =============================================================================
REDIS_HOST=prod-redis.bookstore.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=bookstore_prod_redis_pass
REDIS_MAXMEMORY=2gb
REDIS_LOG_LEVEL=warning

# Redis Connection Pool Settings
REDIS_MAX_CONNECTIONS=200
REDIS_CONNECTION_TIMEOUT=10
REDIS_SOCKET_TIMEOUT=10
REDIS_HEALTH_CHECK_INTERVAL=60

# Redis Performance Settings
REDIS_ENABLE_COMPRESSION=true
REDIS_ENABLE_SERIALIZATION=true
REDIS_COMPRESSION_THRESHOLD=2048
REDIS_CACHE_STRATEGY=lru
REDIS_DEFAULT_TTL=7200

# Redis Replica Configuration (for scaling)
REDIS_REPLICA_HOSTS=prod-redis-replica1.bookstore.com:6379,prod-redis-replica2.bookstore.com:6379

# Redis Monitoring
REDIS_ENABLE_MONITORING=true
REDIS_ENABLE_METRICS=true

# =============================================================================
# WEAVIATE VECTOR DATABASE
# =============================================================================
WEAVIATE_URL=https://prod-weaviate.bookstore.com:8080
WEAVIATE_API_KEY=prod_weaviate_key
WEAVIATE_CLASS_NAME=Book

# =============================================================================
# AI/ML SERVICES
# =============================================================================
GEMINI_API_KEY=prod_gemini_api_key
OPENAI_API_KEY=prod_openai_api_key
HUGGINGFACE_API_KEY=prod_huggingface_api_key

# =============================================================================
# KAGGLE API CONFIGURATION
# =============================================================================
KAGGLE_USERNAME=prod_kaggle_username
KAGGLE_KEY=prod_kaggle_api_key
KAGGLE_DATASET_ID=saurabhbagchi/books-dataset
KAGGLE_DATASET_VERSION=1

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=prod_super_secret_key_64_chars_minimum_for_production_security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# =============================================================================
# APPLICATION PERFORMANCE
# =============================================================================
CACHE_TTL=7200
DB_POOL_SIZE=50
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=5000
LOG_LEVEL=WARNING

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
DEBUG=false
ENVIRONMENT=production
API_VERSION=v1
CORS_ORIGINS=https://bookstore.com,https://www.bookstore.com,https://api.bookstore.com

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_FORMAT=json
LOG_LEVEL=WARNING

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=sk_live_prod_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_prod_stripe_publishable_key
PAYMENT_WEBHOOK_SECRET=prod_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=prod_sendgrid_api_key
EMAIL_FROM=noreply@bookstore.com

# =============================================================================
# FILE STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=prod_aws_access_key
AWS_SECRET_ACCESS_KEY=prod_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bookstore-uploads-prod 