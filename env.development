# =============================================================================
# BOOKSTORE DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Development environment - dev branch
# Used for staging and testing before production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bookstore_dev_user:bookstore_dev_pass@dev-db.bookstore.com:5432/bookstore_dev
POSTGRES_DB=bookstore_dev
POSTGRES_USER=bookstore_dev_user
POSTGRES_PASSWORD=bookstore_dev_pass
POSTGRES_HOST=dev-db.bookstore.com
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://dev-redis.bookstore.com:6379
REDIS_HOST=dev-redis.bookstore.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=dev_redis_pass

# =============================================================================
# WEAVIATE VECTOR DATABASE
# =============================================================================
WEAVIATE_URL=http://dev-weaviate.bookstore.com:8080
WEAVIATE_API_KEY=dev_weaviate_key
WEAVIATE_CLASS_NAME=Book

# =============================================================================
# AI/ML SERVICES
# =============================================================================
GEMINI_API_KEY=dev_gemini_api_key
OPENAI_API_KEY=dev_openai_api_key
HUGGINGFACE_API_KEY=dev_huggingface_api_key

# =============================================================================
# KAGGLE API CONFIGURATION
# =============================================================================
KAGGLE_USERNAME=dev_kaggle_username
KAGGLE_KEY=dev_kaggle_api_key
KAGGLE_DATASET_ID=saurabhbagchi/books-dataset
KAGGLE_DATASET_VERSION=1

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=dev_secret_key_32_chars_minimum_for_development
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=https://dev-api.bookstore.com
NEXTAUTH_URL=https://dev.bookstore.com
NEXTAUTH_SECRET=dev_nextauth_secret_32_chars_minimum

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
GOOGLE_CLIENT_ID=dev_google_client_id
GOOGLE_CLIENT_SECRET=dev_google_client_secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
LOG_LEVEL=DEBUG
ANALYTICS_ENABLED=true
METRICS_COLLECTION=true
SENTRY_DSN=dev_sentry_dsn

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
ENVIRONMENT=development
API_VERSION=v1
CORS_ORIGINS=https://dev.bookstore.com,https://dev-api.bookstore.com

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=500
CACHE_TTL=1800
REDIS_CACHE_TTL=900
MEMORY_CACHE_SIZE=500

# =============================================================================
# DATABASE CONNECTION POOL
# =============================================================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=20
DB_POOL_RECYCLE=900

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=uploads
CDN_URL=https://dev-cdn.bookstore.com
CDN_ENABLED=false

# =============================================================================
# SEARCH & INDEXING
# =============================================================================
SEARCH_INDEX_NAME=books_dev
ELASTICSEARCH_URL=http://dev-elasticsearch.bookstore.com:9200

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_dev_stripe_public_key
STRIPE_SECRET_KEY=sk_test_dev_stripe_secret_key

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKER_PROCESSES=2
MAX_CONNECTIONS=50
REQUEST_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=2

# =============================================================================
# HEALTH MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# API DOCUMENTATION
# =============================================================================
SWAGGER_UI_ENABLED=true
REDOC_ENABLED=true
API_DOCS_PATH=/docs

# =============================================================================
# TESTING ENVIRONMENT
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_bookstore
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
DOCKER_REGISTRY=dev-registry.bookstore.com
DOCKER_IMAGE_TAG=dev
DOCKER_BUILD_CONTEXT=.

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
K8S_NAMESPACE=bookstore-dev
K8S_REPLICAS=2
K8S_RESOURCE_LIMITS_CPU=500m
K8S_RESOURCE_LIMITS_MEMORY=512Mi

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
GITHUB_TOKEN=dev_github_token
DOCKER_USERNAME=dev_docker_username
DOCKER_PASSWORD=dev_docker_password 