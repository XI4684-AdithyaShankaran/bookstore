# =============================================================================
# BOOKSTORE LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Local development environment - local branch
# Used for local development and testing

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bookstore_user:bookstore_pass@localhost:5432/bookstore_db
POSTGRES_DB=bookstore_db
POSTGRES_USER=bookstore_user
POSTGRES_PASSWORD=bookstore_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION - INDUSTRIAL STANDARD
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=bookstore_redis_pass
REDIS_MAXMEMORY=512mb
REDIS_LOG_LEVEL=notice

# Redis Connection Pool Settings
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# Redis Performance Settings
REDIS_ENABLE_COMPRESSION=true
REDIS_ENABLE_SERIALIZATION=true
REDIS_COMPRESSION_THRESHOLD=1024
REDIS_CACHE_STRATEGY=lru
REDIS_DEFAULT_TTL=3600

# Redis Replica Configuration (for scaling)
REDIS_REPLICA_HOSTS=

# Redis Monitoring
REDIS_ENABLE_MONITORING=true
REDIS_ENABLE_METRICS=true

# =============================================================================
# WEAVIATE VECTOR DATABASE
# =============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=Book

# =============================================================================
# AI/ML SERVICES
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# KAGGLE API CONFIGURATION
# =============================================================================
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key
KAGGLE_DATASET_ID=saurabhbagchi/books-dataset
KAGGLE_DATASET_VERSION=1

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION PERFORMANCE
# =============================================================================
CACHE_TTL=3600
DB_POOL_SIZE=20
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=1000
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
ENVIRONMENT=local
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_FORMAT=json
LOG_LEVEL=INFO

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@bookstore.com

# =============================================================================
# FILE STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bookstore-uploads 